%h1 Events

Season: #{select("season", :id, @season_links, {:selected => request.fullpath }, { :class => "redirect_to" })}
%table
  %tr
    %th Date
    %th Time
    %th Summary
    %th Venue
    %th Actions
  %tr
    - @events.each do |event|
      %td #{ event.starts.strftime('%D') }
      %td #{ event.starts.strftime('%l:%M %P') }
      %td #{ event.summary }
      %td #{ event.venue_name }
      %td #{ render_actions_for event }

%br/
= link_to 'New Hockey Game', new_admin_hockey_game_path
