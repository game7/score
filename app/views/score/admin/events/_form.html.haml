= javascript_include_tag :defaults
= semantic_form_for [:admin, @event] do |f|
  = f.inputs "Logistics" do
    = f.input :season_id, :collection => @seasons
    = hidden_field_tag 'teams_path', admin_teams_path(:season_id => '_season_id' , :format => 'json')
    = f.input :starts
    = f.input :duration
    = f.input :venue_id, :collection => @venues
  = f.inputs "Details" do
    = f.input :summary
    = f.input :description, :as => :text, :input_html => { :rows => 4 }
  = f.buttons do
    = f.commit_button
    %li
      = link_to 'Cancel', admin_events_path