= javascript_include_tag :defaults
= semantic_form_for [:admin, @game] do |f|
  = f.inputs "Logistics" do
    = f.input :season_id, :collection => @seasons
    = hidden_field_tag 'teams_path', admin_teams_path(:season_id => '_season_id' , :format => 'json')
    = f.input :starts
    = f.input :duration
    = f.input :venue_id, :collection => @venues
  = f.inputs "Away Team" do
    = f.input :away_team_id, :collection => @teams
    = f.input :away_custom_name, :as => :boolean
    = f.input :away_team_name
  = f.inputs "Home Team" do
    = f.input :home_team_id, :collection => @teams
    = f.input :home_custom_name, :as => :boolean
    = f.input :home_team_name
  = f.buttons do
    = f.commit_button
    %li
      = link_to 'Cancel', admin_events_path