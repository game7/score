= javascript_include_tag :defaults
= semantic_form_for [:admin, @game] do |f|
  = f.inputs "Logistics" do
    = f.input :season_id, :collection => @seasons
    = hidden_field_tag 'teams_path', admin_teams_path(:season_id => '_season_id' , :format => 'json')
    = render :partial => 'score/admin/schedulable/form', :locals => { :form => f, :schedulable => @event }
    = f.input :duration
    = f.input :venue_id, :collection => @venues
  = f.inputs "Left Team" do
    = f.input :left_team_id, :collection => @teams
    = f.input :left_custom_name, :as => :boolean
    = f.input :left_name
  = f.inputs "Right Team" do
    = f.input :right_team_id, :collection => @teams
    = f.input :right_custom_name, :as => :boolean
    = f.input :right_name
  = f.buttons do
    = f.commit_button
    %li
      = link_to 'Cancel', admin_events_path