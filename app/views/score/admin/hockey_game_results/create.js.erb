<% if @result.errors.any? %>
	$("#flash_notice").hide(300);
	$("#dialog-modal").html("<%= escape_javascript( render(:partial => "new") ) %>");
<% else %>
	$("#dialog-modal").dialog("close");
	$("#event_<%= @result.game.id %>").replaceWith("<%= escape_javascript( render(:partial => "score/admin/events/event", :object => @result.game) ) %>");	
	$("#flash_notice").html("<%= escape_javascript( flash.discard(:notice) ) %>");
	$("#flash_notice").show(300);
<% end %>